generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String?
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      session[]
  accounts      account[]
  files         file[]
  passkeys      passkey[]
  twoFactorEnabled Boolean?
  twofactors    twoFactor[]
  masterKeyHash String?   // Hashed version of the master key

  @@map("user")
}

model session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String   @db.ObjectId
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model account {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  accountId             String
  providerId            String
  userId                String    @db.ObjectId
  user                  user      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model verification {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model passkey {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  publicKey    String
  userId       String    @db.ObjectId
  user         user      @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID String
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String?
  createdAt    DateTime?

  @@map("passkey")
}

model twoFactor {
  id          String @id @map("_id") @db.ObjectId  @default(auto())
  secret      String
  backupCodes String
  userId      String @db.ObjectId
  user        user   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("twoFactor")
}

model file {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  originalSize    Int
  mimeType        String
  category        String   // Small, Medium, Large
  chunkSize       Int
  totalChunks     Int
  userId          String   @db.ObjectId
  user            user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  uploadedAt      DateTime @default(now())
  updatedAt       DateTime @updatedAt
  chunks          chunk[]
  parentFolderId  String?  @db.ObjectId
  parentFolder    file?    @relation("FileHierarchy", fields: [parentFolderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childFiles      file[]   @relation("FileHierarchy")
  isFolder        Boolean  @default(false)
  keyDerivationSalt String // For client-side encryption key derivation
  
  @@map("files")
}

model chunk {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fileId      String   @db.ObjectId
  file        file     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  s3Key       String   @unique // UUID used as S3 object key
  chunkOrder  Int
  size        Int
  checksum    String   // For integrity verification
  uploadedAt  DateTime @default(now())
  encryptionIV String  // Initialization Vector for client-side encryption
  
  @@unique([fileId, chunkOrder])
  @@map("chunks")
}

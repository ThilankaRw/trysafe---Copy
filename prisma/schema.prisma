
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
  expiresAt    DateTime
  token        String
  createdAt    DateTime
  updatedAt    DateTime
  ipAddress    String?
  userAgent    String?

  @@unique([token])
  @@map("session")
}

model User {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  email            String?     @unique
  emailVerified    Boolean?
  image            String?
  encryptionSalt   String?
  encryptionParams Json?
  verifierHash     String?
  verifierSalt     String?
  hasSetPassphrase Boolean     @default(false)
  hasPassphrase    Boolean     @default(false)
  lastEncryptionAt DateTime?
  accounts         Account[]
  sessions         Session[]
  files            File[]
  fileShares       FileShare[]
  twoFactorSecret  String?
  twoFactorMethod  String?
  createdAt        DateTime
  updatedAt        DateTime
  twoFactorEnabled Boolean?
  passkeys         Passkey[]
  twofactors       TwoFactor[]

  @@map("user")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model File {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  mimeType       String
  size           Int
  encrypted      Boolean     @default(true)
  uploadedAt     DateTime    @default(now())
  lastAccessedAt DateTime?
  ownerId        String
  owner          User        @relation(fields: [ownerId], references: [id])
  chunks         FileChunk[]
  shares         FileShare[]
  totalChunks    Int
  isComplete     Boolean     @default(false)
}

model FileChunk {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fileId     String
  file       File     @relation(fields: [fileId], references: [id])
  index      Int
  size       Int
  iv         String
  checksum   String
  url        String
  uploadedAt DateTime @default(now())

  @@unique([fileId, index])
  @@index([fileId])
}

model FileShare {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  fileId         String
  file           File      @relation(fields: [fileId], references: [id])
  createdById    String
  createdBy      User      @relation(fields: [createdById], references: [id])
  recipientEmail String
  createdAt      DateTime  @default(now())
  expiresAt      DateTime
  lastAccessedAt DateTime?
  accessCount    Int       @default(0)
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Passkey {
  id           String    @id @map("_id")
  name         String?
  publicKey    String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID String
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String?
  createdAt    DateTime?

  @@map("passkey")
}

model TwoFactor {
  id          String @id @map("_id")
  secret      String
  backupCodes String
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("twoFactor")
}
